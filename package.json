{
  "name": "@tiarebalbi/flux-main-sample",
  "version": "1.0.0",
  "description": "Sample project using flux + react.js to create a web scalable application",
  "main": "index.js",
  "repository": "git@github.com:tiarebalbi/flux-main-sample.git",
  "author": "TiarÃª Balbi <me@tiarebalbi.com>",
  "license": "Apache-2",
  "dependencies": {
    "autoprefixer": "8.2.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.2",
    "babel-jest": "22.4.3",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react-app": "^3.0.2",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.2",
    "css-loader": "0.28.11",
    "dotenv": "5.0.1",
    "eslint": "4.19.1",
    "eslint-config-react-app": "^2.0.0",
    "eslint-loader": "2.0.0",
    "eslint-plugin-flowtype": "2.46.1",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.11",
    "fs-extra": "5.0.0",
    "html-webpack-plugin": "3.1.0",
    "normalize.css": "^8.0.0",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.3.0",
    "postcss-loader": "2.1.3",
    "promise": "8.0.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "style-loader": "0.20.3",
    "sw-precache-webpack-plugin": "0.11.5",
    "url-loader": "1.0.1",
    "webpack": "4.2.0",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "chalk": "2.3.2",
    "flow-bin": "0.68",
    "flow-coverage-report": "^0.5.0",
    "flow-typed": "^2.1.5",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "lint-staged": "^7.0.0",
    "npm-run-all": "^4.1.1",
    "prettier-eslint-cli": "^4.3.0",
    "react-dev-utils": "^5.0.0",
    "react-hot-loader": "next",
    "react-test-renderer": "^16.2.0",
    "stylefmt": "^6.0.0",
    "stylelint": "^9.1.3",
    "stylelint-config-standard": "^18.2.0",
    "webpack-dev-server": "3.1.1"
  },
  "scripts": {
    "ci": "CI=true run-p flow lint-staged test:cov",
    "flow": "flow",
    "flow:fetch-types": "flow-typed install",
    "flow:cov": "flow-coverage-report -i './src/**/*.js' -t html -t text",
    "lint": "eslint src",
    "lint-staged": "lint-staged",
    "precommit": "lint-staged",
    "stylelint": "stylelint 'src/**/*.css'",
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "test:cov": "yarn test --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "react-hot-loader/babel"
    ]
  },
  "styleguide": {
    "components": "src/**/[A-Z]*.js"
  }
}
